@{
    string role = Session["Role"] as string;
}
<ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

    <!-- Sidebar - Brand -->
    @if (role == "Student")
    {
        <a class="sidebar-brand d-flex align-items-center justify-content-center" href="~/Student/Dashboard">
            <div class="sidebar-brand-icon rotate-n-15">
                <i class="fas fa-list-ol"></i>
            </div>
            <div class="sidebar-brand-text mx-3">Task Management</div>
        </a>
    }
    else if (role == "Teacher")
    {
        <a class="sidebar-brand d-flex align-items-center justify-content-center" href="~/Teacher/Dashboard">
            <div class="sidebar-brand-icon rotate-n-15">
                <i class="fas fa-list-ol"></i>
            </div>
            <div class="sidebar-brand-text mx-3">Task Management</div>
        </a>
    }

    <!-- Divider -->
    <hr class="sidebar-divider my-0">

    <!-- Nav Item - Dashboard -->
    <li class="nav-item active">
        @if (role == "Teacher")
        {
            <a class="nav-link" href="~/Teacher/Dashboard">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
        }
        @if (role == "Student")
        {
            <a class="nav-link" href="~/Student/Dashboard">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Dashboard</span>
            </a>
        }
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider">

    <!-- Heading -->
    <div class="sidebar-heading">
        Tasks
    </div>

    <!-- Nav Item - Pages Collapse Menu -->
    <li class="nav-item">
        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
           aria-expanded="true" aria-controls="collapseTwo">
            <i class="fas fa-fw fa-clipboard-list"></i>
            <span>Tasks</span>
        </a>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
            <div class="bg-white py-2 collapse-inner rounded">
                @if (role == "Teacher")
                {
                    <a class="collapse-item" href="~/Teacher/Index">Task List</a>
                    <a class="collapse-item" href="~/Teacher/CreateTask" id="assignTask">Create New Task</a>
                }

                @if (role == "Student")
                {
                    <a class="collapse-item" href="~/Student/Index">View Assignments</a>
                }
            </div>
        </div>
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider d-none d-md-block">

    <!-- Sidebar Toggler (Sidebar) -->
    <div class="text-center d-none d-md-inline">
        <button class="rounded-circle border-0" id="sidebarToggle"></button>
    </div>

</ul>
